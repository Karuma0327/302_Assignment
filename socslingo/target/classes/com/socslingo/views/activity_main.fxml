<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.socslingo.controllers.ActivityMainController" 
    stylesheets="@../css/activity.css">
   <center>
      <VBox prefHeight="900.0" prefWidth="1600.0">
         <children>
            <HBox fx:id="activity_content_area" prefHeight="538.0" prefWidth="1600.0" VBox.vgrow="ALWAYS">

            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefWidth="1600.0" style="-fx-background-color: lightblue;" BorderPane.alignment="CENTER">
         <children>
            <GridPane prefHeight="22.0">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="40.0" prefWidth="40.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="849.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="22.0" minHeight="22.0" prefHeight="22.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="exit_button" mnemonicParsing="false" text="exit">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Button>
                  <Pane fx:id="progress_bar" maxWidth="849.0" prefHeight="22.0" prefWidth="849.0" style="-fx-background-color: green;" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox fx:id="bottom_section" alignment="TOP_CENTER" prefHeight="153.0" prefWidth="1600.0" style="-fx-background-color: white; -fx-border-width: 2, 0, 0,0; -fx-border-color: grey;" BorderPane.alignment="CENTER">
         <children>
            <HBox fx:id="activity_information_container" alignment="CENTER" prefHeight="150.0" prefWidth="800.0">
               <children>
                  <VBox fx:id="skip_control_container" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: lime;" HBox.hgrow="SOMETIMES">
                      <StackPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Rectangle arcHeight="12.0" arcWidth="12.0" fill="#e5e5e5" height="72.0" strokeType="INSIDE" style="-fx-translate-y: 1;" styleClass="generic-activity-button-background-rectangle" width="257.0" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Button 2" />
                        <Button mnemonicParsing="false" styleClass="generic-activity-button" text="Action 2" />
                      </StackPane>
                  </VBox>
                  <VBox fx:id="explaination_container" prefHeight="150.0" prefWidth="495.0" style="-fx-background-color: orange;" HBox.hgrow="SOMETIMES">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <TextFlow fx:id="correct_or_incorrect_text" prefHeight="200.0" prefWidth="200.0" />
                              <TextFlow fx:id="if_incorrect_then_reason" prefHeight="200.0" prefWidth="200.0" />
                              <Button fx:id="report_button" mnemonicParsing="false" text="Button" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox fx:id="user_control_container" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="SOMETIMES">
<StackPane alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
    <Rectangle styleClass="generic-activity-button-medium-background-rectangle" />
    <Button mnemonicParsing="false" styleClass="generic-activity-button-medium" text="Action 3" />
</StackPane>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="change_to_character_recognition_activity" mnemonicParsing="false" text="Character Recognition Activity" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
