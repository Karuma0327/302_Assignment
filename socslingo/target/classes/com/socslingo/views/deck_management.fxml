<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.socslingo.controllers.DeckManagementController"
            stylesheets="@../css/deck_management.css">
    
    <center>
        <VBox spacing="20" alignment="CENTER" styleClass="main-content-container">
            
            <!-- Decks List Section -->
            <VBox spacing="10">
                <!-- Wrap Label in HBox for center-left alignment -->
                <HBox alignment="CENTER_LEFT">
                    <Label text="Your Decks" styleClass="deck-title"/>
                </HBox>
                
                <!-- Wrap ListView in HBox for center alignment -->
                <HBox alignment="CENTER">
                    <ListView fx:id="decks_list_view" prefHeight="300" prefWidth="800" maxWidth="800"/>
                </HBox>
            </VBox>

            <!-- Navigation Buttons to Flashcard Management -->
            <HBox spacing="10" alignment="CENTER">
                
                <Button fx:id="preview_deck_button" text="Preview Deck" onAction="#handlePreviewDeck"
                        styleClass="generic-button-medium"/>
                <Button fx:id="switch_to_flashcard_creation_button" text="Create Flashcard" onAction="#handleButtonAction"
                        styleClass="generic-button-medium"/>
                <Button fx:id="delete_deck_button" text="Delete Deck" onAction="#handleDeleteDeck"
                        styleClass="generic-button-medium"/>
                <Button fx:id="switch_to_deck_flashcard_management_button" text="Manage Flashcards" onAction="#navigateToFlashcardManagement"
                        styleClass="generic-button-medium"/>
                <Button fx:id="create_deck_button" text="Create Deck" onAction="#handleCreateDeck"
                        styleClass="generic-button-medium"/>
            </HBox>
            
            <!-- Optional: Add more sections or components as needed -->
            
        </VBox>
    </center>
    
    <!-- Properly set padding using Insets -->
    <padding>
        <Insets top="75" right="75" bottom="75" left="75"/>
    </padding>
</BorderPane>