<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.socslingo.controllers.DeckController"
            stylesheets="@../css/deck_creation.css">
    <center>
        <VBox spacing="20" alignment="CENTER">
            <!-- Deck Creation Section -->
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Create New Deck" styleClass="section-title"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Deck Name:"/>
                    <TextField fx:id="deck_name_text_field" promptText="Enter deck name" prefWidth="300" />
                </HBox>
                <Button fx:id="createDeckButton" text="Create Deck" onAction="#handleCreateDeck"
                        styleClass="generic-button-medium"/>
            </VBox>

            <!-- Divider -->
            <Separator />

            <!-- Decks List Section -->
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Your Decks" styleClass="section-title"/>
                <ListView fx:id="decksListView" prefHeight="200" />
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="deleteDeckButton" text="Delete Deck" onAction="#handleDeleteDeck"
                            styleClass="generic-button-small"/>
                </HBox>
            </VBox>

            <!-- Flashcards Management Section -->
            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="selectedDeckLabel" text="No Deck Selected" styleClass="section-subtitle"/>
                <HBox spacing="20" alignment="CENTER">
                    <!-- Available Flashcards List -->
                    <VBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Available Flashcards" styleClass="list-title"/>
                        <ListView fx:id="availableFlashcardsListView" prefWidth="250" prefHeight="200" />
                    </VBox>

                    <!-- Deck's Flashcards List -->
                    <VBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Flashcards in Deck" styleClass="list-title"/>
                        <ListView fx:id="deckFlashcardsListView" prefWidth="250" prefHeight="200" />
                    </VBox>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="addFlashcardToDeckButton" text="Add >>" onAction="#handleAddFlashcardToDeck"
                            styleClass="generic-button-small"/>
                    <Button fx:id="removeFlashcardFromDeckButton" text=" Remove" onAction="#handleRemoveFlashcardFromDeck"
                            styleClass="generic-button-small"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Properly set padding using Insets -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
