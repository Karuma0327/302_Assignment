<VBox fx:id="right_sidebar" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.socslingo.controllers.RightSidebarController" spacing="10" alignment="TOP_CENTER"
      styleClass="right-sidebar" stylesheets="@../css/right_sidebar.css">
    <children>
        <HBox>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Functional Bar" styleClass="right-sidebar-title"/>
        </HBox>
        <Button text="RIGHT SIDEBAR SHOW FLASHCARD TEST BUTTON" onAction="#handleDeckPreviewRightSidebar"/>
        <!-- Dynamic Content Container -->
        <StackPane fx:id="dynamic_content" VBox.vgrow="ALWAYS">
            <!-- Initial dynamic content can be placed here if needed -->
        </StackPane>
        <!-- Add more controls as needed -->
    </children>
</VBox>
