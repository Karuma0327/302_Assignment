<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@../css/deck_preview.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.socslingo.controllers.DeckPreviewController">
    <children>
        <HBox alignment="CENTER">
            <Label styleClass="deck-title" text="Previewing Deck: " />
            <StackPane alignment="CENTER_LEFT">
                <children>
                    <Label fx:id="deckNameLabel" styleClass="deck-title" />
                    <TextField fx:id="deckNameTextField" styleClass="deck-title-textfield" visible="false" />
                </children>
            </StackPane>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <StackPane fx:id="flashcardPane" styleClass="flashcard-container">
                <children>
                    <Label fx:id="frontLabel" styleClass="flashcard-label" />
                    <Label fx:id="backLabel" styleClass="flashcard-label" visible="false" />
                </children>
            </StackPane>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleBackToDeckManagement" styleClass="generic-button-medium-large" text="Back to Deck Management" />
            <Button fx:id="previousFlashcardButton" onAction="#handlePreviousFlashcardAction" styleClass="generic-button-medium" text="Previous" />
            <Button fx:id="nextFlashcardButton" onAction="#handleNextFlashcardAction" styleClass="generic-button-medium" text="Next" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="75" left="75" right="75" top="75" />
    </padding>
</VBox>
