<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.shape.Rectangle?>


<BorderPane prefHeight="900.0" prefWidth="1600.0" stylesheets="@../css/activity.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.socslingo.controllers.ActivityCharacterRecognition">
   <center>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <VBox alignment="CENTER">
               <children>
                  <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">
                    <!-- Define 2 Columns with dynamic sizing -->
                    <columnConstraints>
                      <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
                      <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
                    </columnConstraints>
                    <!-- Define 3 Rows with dynamic sizing -->
                    <rowConstraints>
                      <RowConstraints minHeight="50.0" vgrow="ALWAYS" />
                      <RowConstraints minHeight="50.0" vgrow="ALWAYS" />
                      <RowConstraints minHeight="50.0" vgrow="ALWAYS" />
                    </rowConstraints>
                    <children>
                      <!-- First Row, First Column -->
                        <StackPane styleClass="activity-button-stackpane-type-hover" alignment="CENTER" 
                                        GridPane.columnIndex="0" GridPane.rowIndex="0" >
                            <Rectangle styleClass="activity-button__background-rectangle--large-type-hover" 
                                    strokeType="INSIDE"  height="72.0" width="257.0"/>
                            
                            <Button styleClass="activity-button--large-type-hover" mnemonicParsing="false" />
                            <Label styleClass="activity-button__label--large-type-hover" text="Button 1" />
                        </StackPane>

                        <StackPane styleClass="activity-button-stackpane-type-hover" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Rectangle  styleClass="activity-button__background-rectangle--medium-type-hover" 
                                strokeType="INSIDE" height="50.0" width="152.0" />
                            <Button styleClass="activity-button--medium-type-hover" mnemonicParsing="false"/>
                            <Label styleClass="activity-button__label--medium-type-hover" text="Button 2" />
                        </StackPane>

                        <StackPane styleClass="activity-button-stackpane-type-default" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Rectangle styleClass="activity-button__background-rectangle--medium-type-default" 
                                    strokeType="INSIDE"  height="50.0" width="152.0"/>
                        <Button styleClass="activity-button--medium-type-default" mnemonicParsing="false"/>
                        <Label styleClass="activity-button__label--medium-type-default" text="Button 3" />
                        </StackPane>

                        <StackPane styleClass="activity-button-stackpane-type-default" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <Rectangle styleClass="activity-button__background-rectangle--large-type-default" 
                                strokeType="INSIDE" height="72.0" width="257.0"/>
                        <Button styleClass="activity-button--large-type-default" mnemonicParsing="false"/>
                        <Label styleClass="activity-button__label--large-type-default" text="Button 4" />
                        </StackPane>

                        <StackPane styleClass="activity-button-stackpane-type-pressed" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Rectangle styleClass="activity-button__background-rectangle--large-type-pressed" 
                                    strokeType="INSIDE" height="72.0" width="257.0"/>

                            <ToggleButton fx:id="toggleButton" styleClass="activity-button--large-type-pressed" mnemonicParsing="false" text="Label Text"  />
                            <Label fx:id="label" styleClass="activity-button__label--large-type-pressed" />
                        </StackPane>

                        <StackPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <Rectangle styleClass="activity-button-background-rectangle-medium" 
                                    strokeType="INSIDE" style="-fx-translate-y: 1;" height="50.0" width="152.0" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                        <Button styleClass="activity-button-medium" mnemonicParsing="false" text="Action 6" />
                        </StackPane>
                    </children>
                  </GridPane>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
